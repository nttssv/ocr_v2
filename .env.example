# OCR API Configuration
# Copy this file to .env and modify values as needed

# Logging Configuration
LOG_LEVEL=INFO
# Options: DEBUG, INFO, WARNING, ERROR
# Use WARNING in production for better performance

# Server Configuration
API_HOST=0.0.0.0
API_PORT=8000

# Performance Configuration
MAX_WORKERS=16
# Number of parallel processing workers
# Recommended: Number of CPU cores or 16, whichever is lower
# For Apple M4: 16 works well with 10 cores

# Security Configuration
CORS_ORIGINS=*
# Comma-separated list of allowed origins
# Examples:
# CORS_ORIGINS=http://localhost:3000,https://yourdomain.com
# CORS_ORIGINS=*  (allow all - development only)

CORS_CREDENTIALS=true
# Allow credentials in CORS requests
# Set to false for stricter security

# Tesseract Configuration (optional)
# TESSDATA_PREFIX=/usr/local/share/tessdata
# Only set if you need custom Tesseract data location